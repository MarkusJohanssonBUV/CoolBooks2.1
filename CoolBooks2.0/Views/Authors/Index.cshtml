@model IEnumerable<CoolBooks.Models.Authors>



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @if (User.IsInRole("Admin"))
    {
         <p>
            <a class="btn btn-secondary" asp-action="Create">Create New</a>
        </p>
    }
   
<table class="table table-dark table-striped table-borderless table-hover align-top">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-info table-light">
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            
            <td>
                @if (User.IsInRole("Admin")) 
                        {
                            <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.AuthorID">Edit</a> 
                        }
                
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.AuthorID">Details</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
