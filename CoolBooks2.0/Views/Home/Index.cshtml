@using Microsoft.AspNetCore.Identity
@using CoolBooks.Areas.Identity;
@model IEnumerable<CoolBooks.Models.BooksViewModel>
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <img src="https://i.ibb.co/Lz6KPZH/Sk-rmbild-2022-04-06-133234.png" alt="Index">
    <h1>Welcome to CoolBooks!</h1>
    <p>Tänkt design ovan main page</p>
</div>

