<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

@foreach (var item in Model) 
{

@if(item.IsBookOfTheWeek == true)
{


<div class="grid-container">
 
    

        <table>
            <tr>
                <td> <h3>Book of the week!</h3></td>
                </tr>
                <tr>
                <td>
                <img alt="" src="@Html.DisplayFor(modelItem => item.ImagePath)">
                @*<a href="@Html.DisplayFor(modelItem => item.ImagePath)">@Html.DisplayFor(modelItem => item.ImagePath)</a>*@
                </td>
            </tr>
        </table>
            <table>
                  
                        <tr>
                        <td>@Html.DisplayFor(modelItem => item.Title)</td>
                        </tr>
                        <tr>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        </tr>
                        <tr>
                        <td>@Html.DisplayFor(modelItem => item.Created)</td>
                        </tr>
                        <tr>
                        <td>
                            <ul style = "list-style-type:circle">
                                @for (var i = 0; i < item.AuthorName.Count; i++)
                                {
                                    <li>
                                        @Html.DisplayFor(modelItem => item.AuthorName[i])<br />
                                    </li>
                    
                                }
                            </ul>
                        </td>
                        </tr>
                        <tr>
                        <td>
                            <ul style = "list-style-type:circle">
                                @for (var i = 0; i < item.GenreName.Count; i++)
                                {
                                    <li>
                                        @Html.DisplayFor(modelItem => item.GenreName[i])<br />
                                    </li>
                                }
                            </ul>
                        </td>
                        <td>
                    </tr>
            </table>


    
</div>
}}
</body>
</html>
